<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.TestAPIActivity">

    <TextView
        android:id="@+id/TXT"
        android:layout_width="260dp"
        android:layout_height="27dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="64dp"
        android:background="@android:drawable/editbox_background"
        android:drawableEnd="@drawable/ic_arrow"
        android:hint="Selection de l'aliment "

        android:text="Selection de l'aliment "
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_add_alim"
        android:layout_width="130dp"
        android:layout_height="76dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="44dp"
        android:text="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_View_cpt" />

    <TextView
        android:id="@+id/txt_View_cpt"
        android:layout_width="264dp"
        android:layout_height="117dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="109dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="42dp"
        android:orientation="horizontal"
        android:paddingTop="50dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_View_cpt"
        app:layout_constraintTop_toBottomOf="@+id/TXT"
        tools:layout_editor_absoluteX="-3dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Veuillez renseigner la quantitÃ©  (en g) :" />

        <EditText
            android:id="@+id/editQtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:minHeight="48dp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonQuit"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="68dp"
        android:text="Quitter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_View_cpt" />

</androidx.constraintlayout.widget.ConstraintLayout>